@model IEnumerable<WebApplication15.Models.TblKategoriler>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="flex:1;">
                @Html.DisplayNameFor(model => model.KategoriAd)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAd)
            </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.KategoriId"><i class="ph ph-pencil-simple"></i></a> |
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.KategoriId"><i class="ph ph-clipboard-text text-light"></i></a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.KategoriId"><i class="ph ph-trash"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
